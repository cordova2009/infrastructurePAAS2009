<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hummingbird.paas.mapper.VIPMapper">
	<resultMap id="buyVIPListVOResult" type="com.hummingbird.paas.vo.BuyVIPListVOResult">
		<result column="product_name" property="productName" jdbcType="VARCHAR" />
		<result column="member_type" property="memberType" jdbcType="VARCHAR" />
		<result column="price" property="productPrice" jdbcType="VARCHAR" />
		<result column="product_description" property="productDesc" jdbcType="VARCHAR" />
		<result column="id" property="productId" jdbcType="VARCHAR" />
	</resultMap>
	<select id="getBuyVIPListVOResult" resultMap="buyVIPListVOResult" parameterType="java.lang.String">
		SELECT t.product_name,r.member_type,t.price,t.product_description,t.id FROM
		t_ddgl_order_product t,t_ddgl_member_product_attr r
		,t_ddgl_product_category y WHERE y.`status`='OK#' and
		r.product_id=t.id AND t.product_category_id=y.id AND r.member_type=#{memberType,jdbcType=VARCHAR}
	</select>

</mapper>